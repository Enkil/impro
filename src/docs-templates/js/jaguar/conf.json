{
	"tags": {
		"allowUnknownTags" : true
	},
  "source": {
    "include": ["./"],
    "includePattern": ".+\\.js(doc)?$",
    "excludePattern": "docs/js"
  },
	"plugins": ["plugins/markdown"],
	"templates": {
		"cleverLinks": true,
		"monospaceLinks": true,
		"footer": "Created by Igor [Enkil] Timohin",
        "copyright": "2015",
		"default": {
			"outputSourceFiles" : true
		},
		 "applicationName": "detectBrowser.js"
	},
	"markdown": {
		"parser": "gfm",
		"hardwrap": true,
		"tags": ["examples"]
	},
	"opts": {
        "template": "docs/templates/jaguar",
        "encoding": "utf8",
        "destination": "docs/js",
        "recurse": true,
        "private": true
    }

}